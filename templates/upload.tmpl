  <h1>Upload</h1>
  <body>
    <form action="/upload" method="post" enctype="multipart/form-data" onsubmit="return Validate(this);">
      Title: <input type="text" name="songTitle"><br>
      Files: <input type="file" name="file"><br>
      Description: <textarea name="songDesc" rows="3"></textarea>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </body>

